# For i3-gaps: https://github.com/Airblader/i3
for_window [class=".*"] border pixel 5
gaps inner 40
gaps outer 90
gaps horizontal 140
smart_borders on
# smart_gaps on

set $mode_gaps Gaps: [l]arge [m]edium [s]mall [n]one
bindsym $mod+g mode "$mode_gaps"

mode "$mode_gaps" {
    bindsym l gaps outer all set 120 \
        gaps horizontal all set 200 \
        gaps inner all set 80 \
        mode "default
    bindsym m gaps outer all set 90 \
        gaps horizontal all set 140 \
        gaps inner all set 40 \
        mode "default"
    bindsym s gaps outer all set 40 \
        gaps inner all set 20 \
        mode "default"
    bindsym n gaps outer all set 0 \
        gaps inner all set 0 \
        mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
